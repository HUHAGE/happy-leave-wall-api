{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "api",
    "lib": ["es2017"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
} 