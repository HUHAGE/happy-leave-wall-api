{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "has": [
        {
          "type": "header",
          "key": "Origin",
          "value": "http://localhost:8080"
        }
      ],
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "http://localhost:8080" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    },
    {
      "source": "/api/(.*)",
      "has": [
        {
          "type": "header",
          "key": "Origin",
          "value": "https://www.huhawall.online"
        }
      ],
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://www.huhawall.online" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    },
    {
      "source": "/api/(.*)",
      "has": [
        {
          "type": "header",
          "key": "Origin",
          "value": "https://www.huhawall.fun"
        }
      ],
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://www.huhawall.fun" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/messages/:id([0-9]+)",
      "destination": "/api/messages"
    },
    {
      "source": "/api/messages/comments",
      "destination": "/api/messages?action=comments"
    },
    {
      "source": "/api/messages/like",
      "destination": "/api/messages?action=like"
    },
    {
      "source": "/api/users/:action(login|register)",
      "destination": "/api/users/index?action=:action"
    },
    {
      "source": "/api/walls/:id([0-9]+)",
      "destination": "/api/walls/index?id=:id"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*.ts"
    }
  ]
} 